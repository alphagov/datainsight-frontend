<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'performance' %>
  <title><%= yield(:title) %></title>
  <% yield :head %>
</head>

<body>
<!--[if lte IE 5]>
<div id="wrapper" class="wrapper datainsight"><![endif]-->
<!--[if IE 6]>
<div id="wrapper" class="wrapper ie6 datainsight"><![endif]-->
<!--[if IE 7]>
<div id="wrapper" class="wrapper ie7 datainsight"><![endif]-->
<!--[if IE 8]>
<div id="wrapper" class="wrapper ie8 datainsight"><![endif]-->
<!--[if gte IE 9]>
<div id="wrapper" class="wrapper datainsight"><![endif]-->
<!--[if !IE] -->
<div id="wrapper" class="wrapper datainsight"><!-- [endif]-->


  <nav class="performance-nav">
    <%= link_to({controller: 'root', action: 'index'}, class: "top-level") do %>
        <span class="top-level-link">Performance Platform</span>
        <span class="beta-tag">BETA</span>
    <% end %>
    <div class="inner-nav">
      <ul id="navigation">
        <li class="sub-level"><%= nav_link_to "GOV.UK Dashboard", {controller: 'dashboard', action: 'index'} %></li>
        <li class="sub-level"><%= nav_link_to "Inside Government Dashboard", {controller: 'inside_government', action: 'index'} %></li>
      </ul>
    </div>
  </nav>

  <section id="content" class="group category-page" role="main">
    <%= yield %>
  </section>
</div>
</body>

<footer>
  <%= javascript_include_tag 'vendor', 'helpers' %>
  <%= render partial: "shared/for_svg_supported_browsers", :locals => {:content => javascript_include_tag("vendor/d3.v2", "widgets/overlay")} %>
  <%= yield :footer %>
</footer>
</html>
