<% content_for :footer do %>
  <%= javascript_include_tag("vendor/jquery.combobox", "vendor/jquery.mousewheel", "widgets/scatterplot", "widgets/table", "modules/format-success", "modules/govuk/format-success") %>
<% end %>

<article id="format-success-module" class="dashboard one-up static govuk">
  <hgroup class="module-header left">
    <h1 class="graph-info">Content explorer</h1>

    <h2 class="graph-heading">Explore how different pieces of content on GOV.UK were used last&nbsp;week.</h2>
  </hgroup>
  <div id="format-success-legend"></div>

  <nav><ul id="format-success-tabs" class="tabs">
    <% dashboard = 'govuk' %>
    <li data-journey-helper="contentExplorer:<%= dashboard %>:guidesTab" class="active" data-format="guide"><span>Guides</span></li>
    <li data-journey-helper="contentExplorer:<%= dashboard %>:answerTab" data-format="answer"><span>Answers</span></li>
    <li data-journey-helper="contentExplorer:<%= dashboard %>:smartAnswerTab" data-format="smart_answer"><span>Smart Answers</span></li>
    <li data-journey-helper="contentExplorer:<%= dashboard %>:programmeTab" data-format="programme"><span>Benefits</span></li>
  </ul></nav>
  
  <div id="format-success-wrapper">
    <div class="graph-header">
      <div id="scatterplot-filter-wrapper">
        <label for="scatterplot-filter">Filter:</label>
        <input id="scatterplot-filter" type="text" placeholder="keyword or title" value="">
      </div>
      <h3>&nbsp;</h3>
      <div class="tagline">&nbsp;</div>
    </div>
    <figure id="format-success" class="placeholder graph-container">
      <p class="loading">Loading data&hellip;</p>
    </figure>
    <div class="legend">
      <p class="sizes">Size of items based on number of views</p>
      <p class="colour-key">Colour of items based on engagement level</p>
      <div class="stopfloat"></div>
    </div>
    <figcaption>
      <div class="left">
        <h4>Data sources</h4>
        <p>GOV.UK engagement criteria measured with Google Analytics</p>
      </div>
      <div id="engagement-criteria" class="right">
        <h4></h4>
        <p></p>
      </div>
      <div class="stopfloat"></div>
    </figcaption>
  </div>
</article>