}

    /* override gov.uk table styling so that it does not overflow its grid cell */
.ie7 article.table-article {
    width: 960px;
}

.ie6 article.table-article {
    margin-right: 0px;
}

article table {
    /* add 4px margin at the bottom for consistency with svg modules (browsers seem to add 4px below svg elements regardless of css) */
    margin: 14px 0 4px 0;
    width: 100%;
}

    /* policy table hack */
.index_col {
    width: 5%;
}

.views_col {
    width: 7%;
}

.policy_col {
    width: 38%;
}

th.index {
    text-align: right;
}

.date_col {
    width: 16.6%;
}

