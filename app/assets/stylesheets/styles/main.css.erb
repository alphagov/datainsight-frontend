/*}*/

.medium-text {
    font-size: 19px;
}

.large-text {
    font-size: 60px;
}

strong {
    color: #D5007E;
    font-weight: normal;
}

svg {
    font-size: 14px;
}

.graph-heading {
    margin: 4px 12px 4px 0;
    /*font-size: 1em;*/
    line-height: 1.4;
}

.graph-info {
    margin: 2px 12px 2px 0;
}

.graph-heading, .graph-info {
    font-weight: normal;
}

.graph-source {
    padding: 18px 0 0;
    /*font-size: 14px;*/
    margin: 0 0;
}

/* Graphs */
path {
    fill: none;
}

circle.dashed-line, path.dashed-line, line.dashed-line {
    stroke-width: 2.5;
    stroke-dasharray: 3, 6;
    stroke-linecap: round;
    stroke-linejoin: round;
}

path.solid-line, line.solid-line {
    stroke-width: 2.5;
    stroke-linecap: round;
    stroke-linejoin: round;
}

path.label-line, line.label-line {
    stroke-width: 1;
}

path.vertical, line.vertical {
    shape-rendering: crispEdges;
}

.time-series rect.callout-area {
    opacity: 0.0;
}

.time-series path {
  stroke-width: 2.5;
}

/* main focus line for a time series */
.time-series .main-line {
    stroke: #999;
    stroke-linecap: round;
    stroke-linejoin: round;
}

.time-series circle {
    stroke-width: 3.5;
    stroke-dasharray: none;
    stroke-linecap: round;
    stroke-linejoin: round;
    fill: white;
}

.time-series circle.directgov {
    stroke: #D34512;
}

.time-series circle.businesslink {
    stroke: #512881;
}

.time-series circle.govuk {
    stroke: #5b5b5b;
    /*    stroke-width: 4;*/
}

.time-series .callout-box.directgov .details-left {
    color: #D34512;
}

.time-series .callout-box.businesslink .details-left {
    color: #512881;
}

.brown {
    stroke: #D34512;
}

.purple {
    stroke: #512881;
}

.red {
    stroke: #BF1E2D;
}

.time-series .highlight {
    stroke-width: 3.5;
}

.time-series .main-line.highlight {
    stroke: #5b5b5b;
}

.time-series text.line-label {
    text-anchor: end;
}

.time-series text.line-label tspan {
    fill: #6f777b;
}

.businesslink-label {
    color: #512881;
    fill: #512881;
}

.directgov-label {
    color: #D34512;
    fill: #D34512;
}

.graph-red {
    background-color: #BF1E2D;
}

.graph-green {
    background-color: #74B74A;
}

circle.pink, path.pink, line.pink {
    stroke: #D5007E;
}

text.pink {
    fill: #D5007E;
}

span.pink {
    color: #D5007E;
}

.small-square {
    width: 13px;
    height: 13px;
    margin-left: 8px;
}

.small-shim {
    margin-top: 8px;
}

    /* Module Specific */
#narrative {
    font-weight: normal;
}

#narrative .green {
    color: #5c9317;
}

#narrative .red {
    color: #c76674;
}

.module-inner-left {
    width: 260px;
    float: left;
}

.module-inner-right {
    height: 60px;
    width: 100px;
    float: right;
    margin-right: 55px;
}

.graph-section-block {
    width: 100px;
    height: 100px;
    margin-right: 40px;
    text-align: center;
    float: left;
}

.graph-section-title {
    height: 42px;
    position: relative;
}

.graph-section-title * {
    bottom: 2px;
    position: absolute;
}

.datainsight #content {
    background-color: #FFFFFF;
    padding-top: 1px;
    margin: 0 auto;
    border-top: 10px solid #097f96;
}

.error {
    color: #FF0000;
}

.datainsight-hidden {
    display: none;
}

.tick {
    stroke: #333;
    shape-rendering: crispEdges;
}

.y-axis .tick,
.y.axis .tick {
    stroke: none;
}

#format-success .axis .domain, .scatterplot .axis .domain {
    stroke: #808080;
    stroke-width: 1;
    shape-rendering: crispEdges;
    stroke-dasharray: 2px, 8px;
    stroke-dashoffset: 1px;
}

.callout-box {
    position: absolute;

    background-color: #F1F1F1;
    box-shadow: 0px 0px 3px 1px rgba(0, 0, 0, 0.35);

    z-index: 1000;
}

.callout-box .details-left {
    float: left;
    text-align: left;
    white-space: nowrap;
}

.callout-box .details-right {
    padding-left: 110px;
    text-align: right;
    min-width: 40px;
    white-space: nowrap;
}

.callout-box div {
    font-size: 14px;
    line-height: 18px;
}

.callout-box .data-point-label {
    background-color: #E6E5E5;
    white-space: nowrap;
}

.callout-box .data-point-label, .callout-box .details {
    padding: 5px 9px 2px 8px;
}

.callout-box .link {
    text-align: right;
}

