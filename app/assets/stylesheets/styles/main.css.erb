}

.row {
    margin-top: 36px;
    padding-left: 1px;
}

.first-row {
    margin-top: 18px;
}

.module-header {
    margin: 0;
}

.module-header > div {
    float: left;
    margin-top: 8px;
}

.module-header .info {
    margin-top: 0;
}

.legend {
    position: relative;
    width: 210px;
}

.legend-label {
