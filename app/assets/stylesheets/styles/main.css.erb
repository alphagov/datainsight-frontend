/* slimmer hacks */

/* hide top shim */
.shim {
  display: none
}

/* hide home link */
.header-context {
  display: none;
  visibility: hidden;
}

/* hide help link and search box */
header nav, header .search-help {
  display: none;
  visibility: hidden;
}

/* OVERRIDES */

/* stops foundation.css breaking the logo */
header #logo img {
  max-width: none;
}

/* override gov.uk table styling so that it does not overflow its grid cell */
article table {
  margin: 0;
  width: 100%;
}

