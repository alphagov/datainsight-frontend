  color: #808285;
}

.beta-label {
  color: #F15A24;
}

/* Graphs */
path {
  fill: none;
}

circle.dashed-line, path.dashed-line, line.dashed-line {
  stroke-width: 2.5;
  stroke-dasharray: 3, 6;
  stroke-linecap: round;
  stroke-linejoin: round;
}

path.solid-line, line.solid-line {
  stroke-width: 2.5;
  stroke-linecap: round;
  stroke-linejoin: round;
}

path.label-line, line.label-line {
  stroke-width: 1;
}

path.vertical, line.vertical {
  shape-rendering: crispEdges;
}

.time-series rect {
    opacity: 0.0;
}

/* main focus line for a time series */
.time-series .main-line {
  stroke: #999;
  stroke-width: 3;
  stroke-linecap: round;
  stroke-linejoin: round;
}

.time-series circle {
    stroke-width: 3.5;
    stroke-dasharray: none;
    stroke-linecap: round;
    stroke-linejoin: round;
    fill: white;
}

.time-series circle.directgov {
    stroke: #8b5d3b;
}
.time-series circle.businesslink {
    stroke: #662d91;
}
.time-series circle.govuk {
    stroke: #5b5b5b;
/*    stroke-width: 4;*/
}

.time-series .callout-box.directgov .details-left {
    color: #8b5d3b;
}
.time-series .callout-box.businesslink .details-left {
    color: #662d91;
}

.brown {
  stroke: #8b5d3b;
}

.purple {
  stroke: #662d91;
}

.red {
  stroke: #BF1E2D;
}

.time-series .highlight {
    stroke-width: 3.5;
}

.time-series .main-line.highlight {
    stroke-width: 4;
    stroke: #5b5b5b;
}

.graph-red {
  background-color: #BF1E2D;
}

.graph-green {
  background-color: #74B74A;
}

circle.pink, path.pink, line.pink {
  stroke: #c61c71;
}

text.pink {
  fill: #c61c71;
}

span.pink {
  color: #c61c71;
}

.small-square {
  width: 13px;
  height: 13px;
  margin-left: 8px;
}

.small-shim {
  margin-top: 8px;
}

/* Module Specific */
#narrative {
  padding: 12px 12px 12px 0;
  font-weight: normal;
}

#narrative .green {
  color: #5c9317;
}

#narrative .red {
  color: #c76674;
}

.module-inner-left {
  width: 260px;
  float: left;
}

.module-inner-right {
  height: 60px;
  width: 100px;
  float: right;
  margin-right: 55px;
}

.graph-section-block {
  width: 100px;
  height: 100px;
  margin-right: 40px;
  text-align: center;
  float: left;
}

.graph-section-title {
  height: 42px;
  position: relative;
}

.graph-section-title * {
  bottom: 2px;
  position: absolute;
}

.datainsight #content {
  background-color: #FFFFFF;
  padding-top: 1px;
  padding-bottom: 40px;
  margin: 0 auto;
}

.error {
  color: #FF0000;
}

.datainsight-hidden {
  display: none;
}

.tick {
  stroke: #333;
  shape-rendering: crispEdges;
}

.y-axis .tick,
.y.axis .tick {
  stroke: none;
}

#format-success .axis .domain, .scatterplot .axis .domain {
  stroke: #808080;
  stroke-width: 1;
  shape-rendering: crispEdges;
  stroke-dasharray: 2px, 8px;
  stroke-dashoffset: 1px;
}

.callout-box {
    position: absolute;

    background-color: #F1F1F1;
    box-shadow: 0px 0px 3px 1px rgba(0, 0, 0, 0.35);

    white-space: nowrap;
    z-index: 1000;
}

.callout-box .details-left {
    float: left;
    text-align: left;
    
}

.callout-box .details-right {
    padding-left: 110px;
    text-align: right;
    min-width: 40px;
}

.callout-box div {
    font-size: 14px;
    line-height: 18px;
}

.callout-box .data-point-label {
    background-color: #E6E5E5;
}

.callout-box .data-point-label, .callout-box .details {
    padding: 5px 9px 2px 8px;
}

/* top policies */
