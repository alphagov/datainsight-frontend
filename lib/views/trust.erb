<!DOCTYPE html>
<meta charset="utf-8">
<head>
  <script src="/javascripts/jquery-1.7.js"></script>
  <script src="/javascripts/d3.v2.js"></script>
  <script src="/javascripts/trust.js"></script>
  <script type="text/javascript">
    $(function() {
      trust_legend("trustlegend");
      var govukdata = [5,5,10,65,15];
      trust_barchart("govukchart", govukdata);
      var directgovdata = [2,3,35,45,15];
      trust_barchart("directgovchart", directgovdata);
      var businesslinkdata = [33,23,27,12,5];
      trust_barchart("businesslinkchart", businesslinkdata);

      trust_circle("govukcircle", govukdata, "GOV.UK");
      trust_circle("directgovcircle", directgovdata, "Direct.Gov");
      trust_circle("businesslinkcircle", businesslinkdata, "Business Link");
    })
  </script>

  <style>

    #trust{
      margin-left: 41px;
      margin-right: 41px;
      margin-top: 20px;
      margin-bottom: 20px;
    }

    .row {
      width: 100%;
      float: left;
    }

    .trustheader {
      height: 120px;
      width: 380px;
    }

    .left {
      width: 260px;
    }

    .right {
      height: 120px;
      width: 120px;
      float: right;
    }

    .trustcircle .trustcharts {
      height: 150px;
      float: left;
    }

    .trustcharts {
      text-align: left;
    }

    .empty {
      float: left;
      height: 42px;
    }


    .halfwidth {
      width: 462px;
      height: 462px;
    }

    .tinyinfo {
      color: #2975BC;
      font-family: "NTA-Light", Helvetica, Arial, sans-serif;
    }

    .circleblock  {
      width: 100px;
      height: 150px;
      margin-right: 40px;
      float: left;
    }

    .chartblock  {
      width: 100px;
      height: 150px;
      margin-right: 40px;
      float: left;
    }

    .label {
      font-size: 12px;
    }
  </style>
</head>
<body>

<div class="container">
  <div class="row">
    <div id="trust" class="halfwidth">

      <div class="trustheader">
        <div id="trustlegend" class="right"></div>
        <span class="left">
          <span>"How much do you trust the information on this site?"</span>
          <br/>
          <span class="tinyinfo">(1 is not at all, 5 is completely)</span>
        </span>

      </div>


      <div class="trustcircle">
        <p>Average</p>
        <div id="govukcircle" class="circleblock"></div>
        <div id="directgovcircle" class="circleblock"></div>
        <div id="businesslinkcircle" class="circleblock"></div>
      </div>


      <div class="empty"/>

      <div class="trustcharts">
        <p>Detail</p>
        <div id="govukchart" class="chartblock"></div>
        <div id="directgovchart" class="chartblock"></div>
        <div id="businesslinkchart" class="chartblock"></div>
      </div>

    </div>
  </div>
</div>
</body>

</html>



